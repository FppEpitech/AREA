generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  userId         Int     @id @default(autoincrement())
  username       String
  hashedPassword String
  mail           String  @unique
  tokens         Token[]
  plums          Plum[]
}

model Token {
  id           Int    @id @default(autoincrement())
  user         User   @relation(fields: [userId], references: [userId])
  userId       Int
  provider     String
  tokenHashed  String
  scope        Int
  creationDate String
}

model Plum {
  id        Int     @id @default(autoincrement())
  user      User    @relation(fields: [userId], references: [userId])
  userId    Int
  action    Action  @relation(fields: [actionId], references: [id])
  actionId  Int
  trigger   Trigger @relation(fields: [triggerId], references: [id])
  triggerId Int
}

model ActionTemplate {
  id            Int      @id @default(autoincrement())
  name          String
  actFunc       String
  valueTemplate Json
  actions       Action[]
}

model Action {
  id               Int            @id @default(autoincrement())
  actionValue      Json
  actionTemplate   ActionTemplate @relation(fields: [actionTemplateId], references: [id])
  actionTemplateId Int
  plums            Plum[]
}

model TriggerTemplate {
  id            Int       @id @default(autoincrement())
  name          String
  provider      String
  type          String
  trigFunc      String
  valueTemplate Json
  triggers      Trigger[]
}

model Trigger {
  id                Int             @id @default(autoincrement())
  triggerValue      Json
  triggerTemplate   TriggerTemplate @relation(fields: [triggerTemplateId], references: [id])
  triggerTemplateId Int
  plums             Plum[]
}
